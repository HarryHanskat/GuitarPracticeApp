@model GuitarPracticeApp.Models.Exercise

@{
    ViewData["Title"] = "Add Exercise";
}

<h1>Add Exercise</h1>

<form asp-action="AddExercise" method="post">
    <input type="hidden" name="PracticeSessionId" value="@ViewBag.SessionId" />
    
    <div class="form-group">
        <label asp-for="Name" class="control-label">Exercise Name</label>
        <input asp-for="Name" class="form-control" placeholder="e.g., C Major Scale, Smoke on the Water" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Category" class="control-label"></label>
        <select asp-for="Category" class="form-control">
            <option value="">Select Category</option>
            <option value="Scales">Scales</option>
            <option value="Chords">Chords</option>
            <option value="Songs">Songs</option>
            <option value="Technique">Technique</option>
            <option value="Arpeggios">Arpeggios</option>
            <option value="Rhythm">Rhythm</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Bpm" class="control-label">BPM (optional)</label>
        <input asp-for="Bpm" class="form-control" type="number" min="40" max="300" />
        <span asp-validation-for="Bpm" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Description" class="control-label">Notes/Description</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Any notes about this exercise..."></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Add Exercise" class="btn btn-primary" />
        <a asp-action="Details" asp-route-id="@ViewBag.SessionId" class="btn btn-secondary">Cancel</a>
    </div>
</form>
